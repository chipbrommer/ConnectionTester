<Application x:Class="ConnectionTester.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ConnectionTester"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Styles -->
                <ResourceDictionary Source="Styles/Page.xaml" />
                <ResourceDictionary Source="Styles/NavImage.xaml" />
                <ResourceDictionary Source="Styles/NavText.xaml" />
                <ResourceDictionary Source="Styles/NavButton.xaml" />
                <ResourceDictionary Source="Styles/ExitButton.xaml" />
                <ResourceDictionary Source="Styles/TitleImage.xaml" />
                <ResourceDictionary Source="Styles/TitleText.xaml" />
                <ResourceDictionary Source="Styles/CompTabItem.xaml" />
                <ResourceDictionary Source="Styles/StartButton.xaml" />
                <ResourceDictionary Source="Styles/SectionTitleText.xaml" />
                <ResourceDictionary Source="Styles/SectionItemText.xaml" />
                <!-- Utilities -->
                <ResourceDictionary Source="Utilities/DataTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
